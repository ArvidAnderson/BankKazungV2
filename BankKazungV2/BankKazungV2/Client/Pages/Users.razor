@page "/users"
@using BankKazungV2.Shared.Models
@inject HttpClient Http
@inject NavigationManager NavigationManager

<PageTitle>Users</PageTitle>

<h1>All Users</h1>

<button class="btn btn-primary p-1">Add User</button>

@if (users == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">User ID</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email Adress</th>
                <th scope="col">Age</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr @onclick="(() => GetSingleUser(user.UserID))">
                    <td>@user.UserID</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.Age</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private User[]? users;

    protected override async Task OnInitializedAsync()
    {
        users = await Http.GetFromJsonAsync<User[]>("api/User");
    }

    private void GetSingleUser(int UserID)
    {
        NavigationManager.NavigateTo($"/user/{UserID}");
    }
}
