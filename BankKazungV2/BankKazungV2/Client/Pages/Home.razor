@page "/home"
@attribute [Authorize]
@using BankKazungV2.Shared.Models

<AuthorizeView Context="Auth">
    <div class="container">
        <div class="alert alert-secondary">
            <h5>Welcome @Auth.User.Identity.Name</h5>
        </div>
    </div>
    <div class="m-3"></div>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h4>Accounts</h4>
            </div>
            <div class="card-body">
                <div class="card">
                    <div class="card-body">
                        <p>Account</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="m-3"></div>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h4>Cards</h4>
            </div>
            <div class="card-body">
                <div class="card">
                    <div class="card-body">
                        <p>Card</p>
                    </div>
                </div>
            </div>
        </div>

    </div>
</AuthorizeView>
@code {
    private Account[]? accounts;
    private Card[]? cards;

    protected override Task OnInitializedAsync()
    {
        return base.OnInitializedAsync();
    }
}
