@page "/home"
@attribute [Authorize]
@inject HttpClient Http
@using BankKazungV2.Shared.Models

<AuthorizeView Context="Auth">
    <div class="container">
        <div class="alert alert-secondary">
            <h5>Welcome {FirstName} {LastName}</h5>
        </div>
    </div>
    <div class="m-3"></div>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h4>Accounts</h4>
            </div>
            <div class="card-body">
                @if(accounts == null)
                {
                    <div class="container-fluid d-flex align-items-center justify-content-center">
                        <p>Loading...</p>
                    </div>
                }
                @if(accounts != null)
                {
                    <table class="table table-hover">
                        <thead class="">
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Balance</th>
                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var account in accounts)
                            {
                                <tr>
                                    <td>@account.Name</td>
                                    <td>@account.Balance</td>
                                </tr>
                            }
                        </tbody>
                    </table>   
                }
            </div>
        </div>
    </div>
    <div class="m-3"></div>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h4>Cards</h4>
            </div>
            <div class="card-body">
                <div class="card">
                    <div class="card-body">
                        @if(cards == null)
                        {
                            <div class="container-fluid d-flex align-items-center justify-content-center">
                                <p>Loading...</p>
                            </div>
                        }
                        @if(cards != null)
                        {
                            <table class="table table-hover">
                                <thead class="">
                                    <tr>
                                        <th scope="col">Name</th>
                                        <th scope="col">Balance</th>
                
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var card in cards)
                                    {
                                        <tr>
                                            <td>@card.Name</td>
                                            <td>@card.Balance</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>   
                        }
                    </div>
                </div>
            </div>
        </div>

    </div> 
</AuthorizeView>  

@code {
    private Account[]? accounts;
    private Card[]? cards;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            accounts = await Http.GetFromJsonAsync<Account[]>("api/Account/jwt/get/accounts");
        } catch
        {
            Console.WriteLine("Error Getting Accounts");
        }

        try
        {
            cards = await Http.GetFromJsonAsync<Card[]>("api/Cards/jwt/get/cards");
        } catch
        {
            Console.WriteLine("Error Getting Cards");
        }

    }
}
