@page "/transfer"
@using System.ComponentModel.DataAnnotations
@attribute [Authorize]
@inject HttpClient Http
@inject NavigationManager NavigationManager

<AuthorizeView Context="Auth">
    <!-- Transfer -->
    <MudContainer Class="mt-5">
        <MudPaper Elevation="3" Class="mb-5 p-3">
            <MudText Typo="Typo.h4">Transfer</MudText>
        </MudPaper>
    </MudContainer>
    <MudContainer Class="mt-5">
        <EditForm Model="@model" OnValidSubmit="OnValidSubmit">
            <MudPaper Elevation="3" Class="mb-5 p-3">
                <MudSelect T="int" Label="From Account">
                    <MudSelectItem Value="1"></MudSelectItem>
                    <MudSelectItem Value="2"></MudSelectItem>
                </MudSelect>
                <MudNumericField @bind-Value="model.ReciverAccountID" Label="To Reciver"></MudNumericField>
            </MudPaper>
        </EditForm>
    </MudContainer>
</AuthorizeView>

@code {
    TransferForm model = new TransferForm();
    public class TransferForm
    {
        [Required]
        public int SenderAccountID { get; set; }
        [Required]
        public int ReciverAccountID { get; set; }
    }

    public async Task OnValidSubmit()
    {
        
    }
}
