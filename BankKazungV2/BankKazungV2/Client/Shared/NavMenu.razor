<AuthorizeView Context="Auth">
    <MudNavMenu>
        <MudPaper Elevation="0" class="p-3 bg-transparent d-flex justify-content-center align-items-center">
            @if(Auth.User.Claims.Where(c => c.Type  == "FirstName").FirstOrDefault().Value[0] != null)
            {
               <MudAvatar Size="Size.Large" Color="Color.Primary">@Auth.User.Claims.Where(c => c.Type  == "FirstName").FirstOrDefault().Value[0]</MudAvatar>
            }
        </MudPaper>
        <MudNavLink Href="/overview" Icon="@Icons.Filled.Dashboard" Match="NavLinkMatch.All">Overview</MudNavLink>
        <MudNavLink Href="/transfer" Icon="@Icons.Filled.Send" Match="NavLinkMatch.Prefix">Transfer</MudNavLink>
        <MudNavLink Href="/accounts" Icon="@Icons.Filled.AccountBalance" Match="NavLinkMatch.Prefix">Accounts</MudNavLink>
        <MudNavLink Href="/cards" Icon="@Icons.Filled.CreditCard" Match="NavLinkMatch.Prefix">Cards</MudNavLink>
        <MudNavLink Href="/transactions" Icon="@Icons.Filled.ListAlt" Match="NavLinkMatch.Prefix">Transactions</MudNavLink>
        <MudNavLink Href="/about" Icon="@Icons.Filled.Info" Match="NavLinkMatch.Prefix">About</MudNavLink>
    </MudNavMenu>
</AuthorizeView>

